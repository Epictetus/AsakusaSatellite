%table.room-list
 %tr
  %th=t :Name
  %th=t :LastUpdate
 - @rooms.each do |room|
  %tr
   %td.name
    =link_to room.title, :controller => :chat, :action => :room, :id => room
   %td.update 
    = l(room.created_at)

.buttons
 =link_to t(:CreateNewRoom), {:controller => :chat, :action => :create}, :class => "large red button"
